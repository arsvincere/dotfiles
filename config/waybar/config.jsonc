// -*- mode: jsonc -*-
{
    "mode": "hide",
    // "mode": "dock",
    // "start_hidden": true,
    "position": "top",

    // Modules order ---------------------------------------------------------
    "modules-left": [
        "custom/timer",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock",
    ],
    "modules-right": [
        "hyprland/language",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "disk",
        "temperature",
        "custom/power",
    ],

    // Modules configuration -------------------------------------------------
    "custom/timer": {
      "format": "{}",
      "exec": "python3 /home/alex/.config/waybar/timer.py",
      "interval": 1,
      "on-click": "alacritty -e nvim ~/diary/journal/dashboard.txt",
      "tooltip": false
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "1": "avin",
            "2": "math",
            "3": "dev",
            "4": "file",
            "5": "dir",
            "6": "msg",
            "7": "web",
            "8": "edit",
            "9": "read",
            "10": "draw",
            "11": "zsh",
            "12": "trade",
            "13": "cfg",
            "14": "view",
            "15": "test",
            "urgent": "ÔÅ™ ",
            "focused": "ÔÜí ",
            "default": "ÔÑë "
        }
    },
    "clock": {
        "interval": 1,
        "timezone": "Europe/Moscow",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "ÔÄó {:%H:%M  ÔÅ≥ %a %e %B}",
        "format-alt": "ÔÄó {:%H:%M:%S  ÔÅ≥ %a %Y-%m-%d}"
    },
    "hyprland/language": {
        "format": "[{shortDescription}]",
        "on-click": "google-chrome-stable https://wooordhunt.ru/edu/start"
    },
    "pulseaudio": {
        "scroll-step": 5,
        "format": "ÔÄ®  {volume}",
        "format-muted": "ÔÄ¶ mute",
        "on-click": "pavucontrol",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "headphone": "ÔÄ• ",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "]
        },
    },
    "network": {
        "format-wifi": "Ôá´  {signalStrength}",
        "format-ethernet": "Û∞àÄ {ifname}",
        "format-disconnected": "Û∞ñ™ --",
        "format-alt": "{ifname}: {essid} [{ipaddr}/{cidr}]",
        "tooltip-format": "{ifname}: {essid} - [{ipaddr}/{cidr}]"
    },
    "custom/power": {
      "format": "ÔÄë",
      "on-click": "alacritty -e shutdown now",
      "tooltip": false
    },
    "cpu": {
        "interval": 1,
        "format": "Ôíº {usage:<2}",
        "on-click": "alacritty -T btop -e btop"
    },
    "memory": {
        "interval": 1,
        "format": "Ôîã {used:.2f}"
    },
    "disk": {
        "interval": 30,
        "format": "Ôë≤ {specific_used:.2f}",
        "unit": "GB",
        "tooltip-format": "used: {used} free: {free} total: {total}"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}¬∞",
        "format-critical": "{icon} {temperatureC}¬∞",
        "format-icons": ["Ôãã", "Ôãâ", "Ôãá"]
    }

}

